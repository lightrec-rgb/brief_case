<nav class="bg-white border-b border-gray-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      
      <!-- Brand -->
      <div class="flex-shrink-0 flex items-center">
        <%= link_to root_path,
              class: "text-2xl font-bold" do %>
                <span class="text-brand-blue">Brief/</span><span class="text-gold">Case</span>
        <% end %>
      </div>

      <!-- Navigation links -->
      <% if user_signed_in? %>
        <div class="hidden sm:ml-6 sm:flex sm:space-x-8 items-center">
          <%= link_to "Dashboard", authenticated_root_path,
                class: "text-gray-700 hover:text-blue-600 px-3 py-2 rounded-md text-sm font-medium" %>
          <%= link_to "Decks", subjects_path,
                class: "text-gray-700 hover:text-blue-600 px-3 py-2 rounded-md text-sm font-medium" %>
          <%= link_to "Cards", entries_path,
                class: "text-gray-700 hover:text-blue-600 px-3 py-2 rounded-md text-sm font-medium" %>
          <%= link_to "Learn", sessions_path,
                class: "text-gray-700 hover:text-blue-600 px-3 py-2 rounded-md text-sm font-medium" %>
        </div>

        <!-- User menu -->
        <div class="ml-6 flex items-center">
          <span class="mr-3 text-sm text-gray-500">
            <%= current_user.name || current_user.email %>
          </span>
          <%= button_to "Sign out", destroy_user_session_path,
                method: :delete, data: { turbo: false },
                class: "bg-gold text-white px-3 py-1 rounded-md text-sm font-medium hover:bg-brand-blue" %>
